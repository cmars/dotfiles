#
# gowork launches tmux with an environment suited to the particular developer
# hat I'm wearing.

WORKSPACE="$1"
PROJECT="$2"

if [ -z "${WORKSPACE}" ]; then
	echo "Usage: $0 <workspace> [<project>]"
	exit 1
fi

session_digest=( $(echo ${WORKSPACE}-${PROJECT} | md5sum) )
SESSION=${USER}-${session_digest[0]}
echo ${SESSION}

export GOPATH=${HOME}/${WORKSPACE}/gocode
if [ ! -d "${GOPATH}" ]; then
	echo "${GOPATH} not found"
	exit 1
fi

cd ${GOPATH}/src

PROJECTPATH=
if [ -n "${PROJECT}" ]; then
	# Choose the shortest matching path
	PROJECTPATH=$( \
		for p in $(find ${GOPATH} -type d -path "${GOPATH}/src/*${PROJECT}"); do \
			echo $(echo $p | wc -c) $p; \
		done | sort -n -k1 | awk '{print $2}' | head -1 )

	cd ${PROJECTPATH}
	if [ ! -d "${PROJECTPATH}" ]; then
		echo "Project ${PROJECT} not found"
		exit 1
	fi
fi

case "${WORKSPACE}" in
	cmarstech)
		export DEBEMAIL=cmars@cmarstech.com
		export DEBFULLNAME='Casey Marshall'
		;;
	canonical)
		export DEBEMAIL=casey.marshall@canonical.com
		export DEBFULLNAME='Casey Marshall'
		;;
esac

if tmux -2 new-session -d -s ${SESSION}; then
	tmux set-option -t ${SESSION} update-environment "GOPATH DEBEMAIL DEBFULLNAME"
	if [ -n "${PROJECTPATH}" ]; then
		tmux send-keys 'vim' C-m
		tmux send-keys '\n'
		tmux new-window -t ${SESSION}:1 -n 'shell'
		tmux select-window -t ${SESSION}:0
	fi
fi

tmux attach -t ${SESSION}
